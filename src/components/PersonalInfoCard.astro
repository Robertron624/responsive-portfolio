<style lang="scss">

    // Import vars file in src folder

    @import "../vars.scss";

    section#personal-info {
        width: 100%;
        padding: 2rem 22px;
        background-color: #fff;
        display: flex;
        flex-direction: column;
        gap: 2rem;
        margin-inline: auto;
        border-radius: 12px;

        @include desktop {
            gap: unset;
            display: grid;
            column-gap: 2rem;
            grid-template-columns: 1fr 3.5fr;
        }

        .avatar {
            overflow: hidden;
            img {
                border-radius: 10px;
            }
        }

        .texts {
            .top {
                display: flex;
                justify-content: space-between;
                --grey: #4f4f4f;
                color: var(--grey);
                .name-profession {
                    display: flex;
                    flex-direction: column;
                    gap: 6px;
                    .name {
                        font-family: "Montserrat";
                        font-size: 24px;
                        font-style: normal;
                        font-weight: 600;
                        line-height: normal;
                    }
                    .profession {
                        color: #828282;
                        font-family: "Montserrat";
                        font-size: 18px;
                        font-style: normal;
                        font-weight: 500;
                        line-height: normal;
                    }
                }

                .contact {
                    display: flex;
                    flex-direction: column;
                    gap: 10px;
                    div {
                        display: flex;
                        gap: 16.4px;
                        align-items: center;
                    }

                    .email {
                        span {
                            font-size: 18px;
                            font-style: normal;
                            font-weight: 500;
                            line-height: normal;
                        }
                    }
                    .phone {
                        span {
                            font-size: 18px;
                            font-style: normal;
                            font-weight: 500;
                            line-height: normal;
                        }
                    }
                }
            }
            .summary {
                margin-top: 37px;

                & > p {
                    margin-bottom: 1rem;
                }

                p {
                    color: #828282;
                    font-size: 18px;
                    font-style: normal;
                    font-weight: 500;
                    line-height: normal;
                }
            }
        }
    }
</style>
